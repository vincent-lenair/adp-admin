{% macro form_row(element, size) %}
    {% set element_errors = element.vars.errors %}
    <div class="form-group {% if element_errors|length > 0 %}has-error{% endif %}">
        {{ form_label(element, null, {'label_attr': {'class': 'col-md-3 control-label'}})}}
        <div class="col-md-{{ size }}">
            {{ form_widget(element, {'attr': {'class': 'form-control'}})}}
        </div>
        {% for error in element_errors %}
            <span class="help-block">{{ error.message }}</span>
        {% endfor %}
    </div>
{% endmacro %}