<body class=" login">
<div class="user-login-5">
    <div class="row bs-reset">
        <div class="col-md-6 bs-reset mt-login-5-bsfix">
            <div class="login-bg" style="background-image:url({{ asset('assets/pages/img/login/bg1.jpg') }})">
            </div>
        </div>
        <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
            <div class="login-content">
                <h1>Admin Dashboard</h1>
                <form action="{{ path('login') }}" class="login-form" method="post">

                    {% if error %}
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-close="alert"></button>
                            <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                    {% endif %}

                    <div class="row">
                        <div class="col-xs-6">
                            <input class="form-control form-control-solid placeholder-no-fix form-group{{ error ? ' has-error' : '' }}" type="text" autocomplete="off" placeholder="Username" id="username" name="_username" value="{{ last_username }}"/>
                        </div>
                        <div class="col-xs-6">
                            <input class="form-control form-control-solid placeholder-no-fix form-group{{ error ? ' has-error' : '' }}" type="password" autocomplete="off" placeholder="Password" id="password" name="_password"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8 text-right">
                            <button class="btn green" type="submit">Connexion</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
