{% extends 'layout/base.html.twig' %}
{% block title %}Ajouter un véhicule{% endblock %}
{% block page_title %}Véhicules{% endblock %}

{% from ":form:fields.html.twig" import form_row %}
{% block page_content %}
    <div class="row">

        <div class="col-md-12">
            <div class="portlet box red">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-car"></i>Ajouter un véhicule
                    </div>
                </div>

                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-body">
                        {{ form_row(form.make, 3) }}
                        {{ form_row(form.model, 3) }}
                        {{ form_row(form.year, 2) }}
                        {{ form_row(form.title, 6) }}
                        {{ form_row(form.description, 6) }}
                        {{ form_row(form.price, 2) }}
                        {{ form_row(form.sold, 1) }}
                        {{ form_row(form.warranty, 1) }}
                        {{ form_row(form.main_image, 4) }}
                        {{ form_row(form.images, 4) }}
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-circle green">Enregistrer</button>
                                <button type="reset" class="btn btn-circle grey-salsa btn-outline">Annuler</button>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
