{% extends 'layout/base.html.twig' %}
{% block title %}Liste des véhicules{% endblock %}
{% block page_content %}
<div class="col-md-12">
    <div class="portlet box red">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-car"></i>Ajouter un véhicule
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <a class="btn sbold green" href="{{ path('vehicule_add') }}"> Ajouter un véhicule
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                <thead>
                <tr>
                    <th> Photo</th>
                    <th> Titre</th>
                    <th> Marque</th>
                    <th> Modèle</th>
                    <th> Année</th>
                    <th> Tarif</th>
                    <th> Etat</th>
                    <th> Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for vehicule in vehicules %}
                    <tr class="odd gradeX">
                        <td style="width: 10%"><img src="{{ asset(vehicule.main_image, 'vehicules_img') }}" width="75px"/></td>
                        <td style="width: 40%">{{ vehicule.title }}</td>
                        <td style="width: 10%">{{ vehicule.make }}</td>
                        <td style="width: 10%">{{ vehicule.model }}</td>
                        <td style="width: 8%">{{ vehicule.year }}</td>
                        <td style="width: 11%">{{ vehicule.price }}</td>
                        <td style="width: 10%">
                            {% if vehicule.sold %}
                                <span class="label label-sm label-success"> Vendu </span>
                            {% endif %}
                        </td>
                        <td style="width: 21%">
                            <a class="btn btn-primary" href="{{ path('vehicule_edit', {'vehicule_id' : vehicule.id}) }}">Editer</a>
                            <a class="btn btn-danger" href="{{ path('vehicule_delete', {'vehicule_id' : vehicule.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
{% block page_plugins_script %}
    <script src="{{ asset('assets/global/scripts/datatable.js')}}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/datatables/datatables.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js')}}" type="text/javascript"></script>
{% endblock %}

{% block page_script %}
    <script src="{{ asset('assets/pages/scripts/table-datatables-managed.min.js')}}" type="text/javascript"></script>
{% endblock %}

